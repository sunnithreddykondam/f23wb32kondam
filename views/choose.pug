extends layout

block content
  h1= title
  - let image_names = ["book1.jpg", "book2.jpg", "book3.jpg", "book4.jpg", "book5.jpg"]
  
  - for (let i = 0; i < 3; i++)
    - let randomIndex = Math.floor(Math.random() * 5)
    - let imageName = image_names[randomIndex]
    img(src=`/images/${imageName}`, alt=imageName, height="200", width="200")